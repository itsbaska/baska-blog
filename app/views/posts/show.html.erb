<div id="post-content">
  <h1 class="title">
    <%= @post.title %>
  </h1>

  <p>
    <span class="date">
    Submitted <%= time_ago_in_words(@post.created_at) %> ago by</span> <%= link_to @post.author.username, user_path %>
    <% if authorized?(@post.author) %>
    | <%= link_to 'Edit', edit_post_path(@post) %>
    | <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </p>

  <p class="body">
    <%= @post.body.html_safe %>
  </p>
  <div id="comments">
    <h2><%= @post.comments.count %> Comments</h2>
    <%= render @post.comments %>

    <h2>Add a Comment</h2>
    <%= render "comments/form" %>
  </div>
</div>